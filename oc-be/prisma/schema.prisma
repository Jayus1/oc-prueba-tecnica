generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoCuidado {
  RIEGO
  FERTILIZACION
  PODA
  LUZ
}

model Planta {
  id            String   @id @default(uuid())
  nombre        String
  idEspecie     String   @map("id_especie")
  idUbicacion   String?  @map("id_ubicacion")
  fechaRegistro DateTime @default(now()) @map("fecha_registro")
  isActive      Boolean  @default(true) @map("is_active")

  especie   Especie    @relation(fields: [idEspecie], references: [id])
  ubicacion Ubicacion? @relation(fields: [idUbicacion], references: [id])
  cuidados  Cuidado[]

  @@map("plantas")
}

model Cuidado {
  id          String      @id @default(uuid())
  idPlanta    String      @map("id_planta")
  tipo        TipoCuidado
  fechaInicio DateTime    @map("fecha_inicio")
  fechaFin    DateTime?   @map("fecha_fin")
  notas       String?
  isActive    Boolean     @default(true) @map("is_active")

  planta Planta @relation(fields: [idPlanta], references: [id], onDelete: Cascade)

  @@map("cuidados")
}

model Especie {
  id               String   @id @default(uuid())
  nombre           String
  nombreCientifico String?  @map("nombre_cientifico")
  descripcion      String?
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  isActive         Boolean  @default(true) @map("is_active")

  plantas Planta[]

  @@map("especies")
}

model Ubicacion {
  id          String   @id @default(uuid())
  nombre      String
  descripcion String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  isActive    Boolean  @default(true) @map("is_active")

  plantas Planta[]

  @@map("ubicaciones")
}
