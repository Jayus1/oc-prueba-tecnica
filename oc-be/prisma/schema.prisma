generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoCuidado {
  RIEGO
  FERTILIZACION
  PODA
  LUZ
}

model Planta {
  id            Int       @id @default(autoincrement())
  nombre        String
  especie       String
  ubicacion     String?
  fechaRegistro DateTime  @default(now()) @map("fecha_registro")
  isActive      Boolean   @default(true)
  cuidados      Cuidado[]

  @@map("plantas")
}

model Cuidado {
  id          Int         @id @default(autoincrement())
  idPlanta    Int         @map("id_planta")
  tipo        TipoCuidado
  fechaInicio DateTime    @map("fecha_inicio")
  fechaFin    DateTime?   @map("fecha_fin")
  notas       String?
  isActive    Boolean     @default(true)

  planta Planta @relation(fields: [idPlanta], references: [id], onDelete: Cascade)

  @@map("cuidados")
}
